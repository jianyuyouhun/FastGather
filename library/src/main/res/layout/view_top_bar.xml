<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarSize"
    android:orientation="vertical">

    <TextView
        android:id="@+id/top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/top_bar_title_size" />

    <ImageView
        android:id="@+id/top_bar_left_btn"
        android:layout_width="@dimen/actionBarSize"
        android:layout_height="@dimen/actionBarSize"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/actionBarIconPadding"
        app:srcCompat="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionBarSize"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/top_bar_left_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:paddingLeft="@dimen/action_bar_margin_horizontal"
        android:paddingRight="@dimen/action_bar_margin_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/top_bar_text_size" />


</RelativeLayout>